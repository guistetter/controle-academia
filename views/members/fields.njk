<div class="item">
        <div>Avatar url</div>
        <div>
          <input type="url" name="avatar_url" placeholder="http://"
          value="{{instructor.avatar_url}}">
        </div>
      </div>

      <div class="item">
        <div>Instrutor</div>
        <div>
          <input type="text" name="name" placeholder="Nome do instrutor"
          value="{{instructor.name}}">
        </div>
      </div>

      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth" value="{{instructor.birth}}">
        </div>
      </div>

        <div class="item">
        <div>Sexo</div>
        <div>
          <span>
            <input 
              type="radio" 
              name="gender" 
              value="m" 
            {% if instructor.gender == 'm' %}
