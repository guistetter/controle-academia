{% extends "layout.njk" %}
{% block content %}
  <div class="card table-container">  
    <div class="header">
      <a class="button" href="/instructors/create">Novo</a>
      <form action="/instructors" method="get">
        <input 
        type="text" 
        name="filter" 
        placeholder="Filtrar instrutor ou serviço"
        value={{filter}}
        >
        <button type="submit">Filtrar</button>
      </form>

    </div>

    <table width="100%">
      <thead>
        <tr>
          <th>Aluno</th>
          <th>Email</th>
          <th>Altura</th>
          <th>Peso</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for member in members %}
        <tr>
          <td>
            <span style="background-image: url({{member.avatar_url}})"></span>
            {{member.name}}
          </td>
          <td>{{member.email}}</td>
          <td>{{member.height}}</td>
          <td>{{member.weight}}</td>
          <td><a href="/members/{{member.id}}">Ver</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    <div class="pagination"
      data-page={{pagination.page}}
      data-total={{pagination.total}}
      data-filter={{filter}}
      >
    </div>
  </div>
{% endblock content %}